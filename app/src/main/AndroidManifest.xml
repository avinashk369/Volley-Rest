<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techcamino.pay.alipay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.RefundTransaction"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.MerchantMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Cancellation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AdminMenu"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AdminLogin"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.MerchantLogin"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.PurchasePin"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.PurchaseCard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme" />
        <activity
            android:name=".activities.Dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TestLayout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme" />
        <activity
            android:name=".activities.QrScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>